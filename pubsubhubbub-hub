#!/usr/bin/perl

use strict;
use lib 'lib';
use HTTP::Daemon;
use HTTP::Status;
use Net::PubSubHubbub::Hub;
use Getopt::Long;

my $port = 8080;
GetOptions("port=i" => \$port) or die "Unknown options.";

my $hub = Net::PubSubHubbub::Hub->new;

my $d = HTTP::Daemon->new(
    LocalPort => $port,
    ReuseAddr => 1,
    ) or die;
print "Hub running at: ", $d->url, "\n";
while (my $c = $d->accept) {
    while (my $r = $c->get_request) {
	my $res = $hub->handle_request($r);
	$c->send_response($res);
    }
    $c->close;
    undef($c);
}

